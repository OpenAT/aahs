<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- account.invoice qweb report with ESR slip -->
        <template id="invoice_ahch_document">
                <t t-if ="o and 'company_id' in o">
                <t t-set="customer" t-value="o.partner_id"/>
                <t t-set="company" t-value="o.company_id"/>
                    <t t-if="o.date_invoice">
                        <t t-set="pdate" t-value="time.strftime('%d %B %Y',time.strptime(o.date_invoice,'%Y-%m-%d'))" />
                        <t t-call="reports_ahch.report_layout_ahch_saint_header"/>
                        <div class="page" style="position: relative; top: 10px;">
                            <div>
                                <strong>Invoice address:</strong><br/>
                                <span t-field="customer.name"/><br/>
                                <span t-field="customer.street"/><br/>
                                <span t-field="customer.zip"/>
                                <span t-field="customer.city"/>
                                <br/><br/><br/>
                            </div>

                            <div class="row">
                            <div style="font-size:18px;" class="col-xs-6">
                                <span t-if="o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')"><strong>Invoice</strong></span>
                                <span t-if="o.type == 'out_invoice' and o.state == 'proforma2'"><strong>PRO-FORMA</strong></span>
                                <span t-if="o.type == 'out_invoice' and o.state == 'draft'"><strong>Draft Invoice</strong></span>
                                <span t-if="o.type == 'out_invoice' and o.state == 'cancel'"><strong>Cancelled Invoice</strong></span>
                                <span t-if="o.type == 'out_refund'"><strong>Refund</strong></span>
                                <span t-if="o.type == 'in_refund'"><strong>Supplier Refund</strong></span>
                                <span t-if="o.type == 'in_invoice'"><strong>Supplier Invoice</strong></span>
                                <span t-field="o.number"/>
                            </div>

                                <div class="col-xs-3" t-if="customer.ref">
                                    <strong>Customer Code:</strong>
                                    <p t-field="customer.ref"/>
                                </div>
                                 <div class="col-xs-3" t-if="o.date_invoice" style="float:right">
                                    <strong>Date:</strong>
                                     <p t-field="o.date_invoice"/>
                                </div>
                            </div>

                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <t t-set="is_discount" t-value="0"/>
                                        <t t-set="is_tax" t-value="0"/>
                                        <t t-set="allover_weight" t-value="0"/>
                                        <!-- CHECK if there is a discount or a tax and store it into variable -->
                                        <t t-foreach="o.invoice_line" t-as="line">
                                            <t t-if="line.discount">
                                                <t t-set="is_discount" t-value="1"/>
                                            </t>
                                            <t t-if="line.invoice_line_tax_id">
                                                <t t-set="is_tax" t-value="1"/>
                                            </t>
                                            <t t-if="line.quantity">
                                                <t t-set="allover_weight" t-value="allover_weight+(line.quantity*line.product_id.weight_net)"/>
                                            </t>
                                        </t>

                                        <th style="width:31%;">Description</th>
                                        <th style="width:15,7%;">Article number</th>
                                        <th style="width:5%;">Quantity</th>
                                        <th class="text-rght" style="width:7,8%;" >Stock</th>
                                        <th class="text-right" style="width:13,15%;">Unit Price</th>

                                        <t t-if="is_discount">
                                                <th class="text-right" groups="sale.group_discount_per_so_line" style="width:10,5%;">Discount (%)</th>
                                        </t>
                                        <t t-if="is_tax">
                                            <th class="text-right" style="width:10,5%;">Taxes</th>
                                        </t>
                                        <th class="text-right" style="width:15,7%;">Amount</th>
                                    </tr>
                                </thead>
                                <tbody class="invoice_tbody">
                                    <tr t-foreach="o.invoice_line" t-as="l">
                                        <div style="page-break-inside: avoid">
                                            <td><span t-field="l.product_id" style="width:50mm; display: block;"/><!-- <span t-field="l.product_id.default_code" /> --></td>
                                            <td><span t-field="l.product_id.default_code" style="width:30mm; display: block;"/></td>
                                            <td><span t-esc="'{0:,.0f}'.format(int(l.quantity))" style="width:10mm; display: block; text-align: right;"/><!-- <span t-field="l.uos_id" groups="product.group_uom"/> --></td>
                                            <td><span t-field="l.product_id.loc_rack"/> <span t-field="l.product_id.loc_row"/> <span t-field="l.product_id.loc_case"/></td>
                                            <td class="text-right">
                                                <span t-field="l.price_unit"/>
                                            </td>
                                            <t t-if="is_discount">
                                                <td class="text-right" groups="sale.group_discount_per_so_line"><span t-field="l.discount" style="width:15mm; display: block; text-align: right;"/></td>
                                            </t>
                                            <t t-if="is_tax">
                                                <td class="text-right">
                                                    <span t-esc="', '.join(map(lambda x: x.description, l.invoice_line_tax_id))" style="width:15mm; display: block; text-align: right;"/>
                                                </td>
                                            </t>
                                            <td class="text-right">
                                                <span t-field="l.price_subtotal"/>
                                            </td>
                                        </div>
                                    </tr>
                                </tbody>
                            </table>

                            <div class="row">
                                <div class="col-xs-4 pull-right">
                                        <table class="table table-condensed">
                                            <t t-if="is_tax">
                                                <tr class="border-black">
                                                    <td></td>
                                                    <td class="text-right"><strong>Total Without Taxes</strong></td>
                                                    <td class="text-right">
                                                        <span t-esc="o.currency_id" t-field="o.amount_untaxed"/>
                                                    </td>
                                                </tr>
                                            </t>
                                            <t t-if="is_tax">
                                            <tr>
                                                <td></td>
                                                <td class="text-right">Taxes</td>
                                                <td class="text-right">
                                                    <span t-esc="o.currency_id" t-field="o.amount_tax"/>
                                                </td>

                                            </tr>
                                            </t>
                                        </table>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-8 pull-right">
                                    <table class="table table-condensed">
                                        <tr style="border-bottom:1pt solid black; border-top:1pt solid black;">
                                            <td class="text-left"><span t-esc="allover_weight"/> kg</td>
                                            <td class="text-right"><strong>Total</strong></td>
                                            <td class="text-right">
                                                 <span t-esc="o.currency_id" t-field="o.amount_total"/>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>

                            <div class="row" t-if="o.tax_line">
                                <div class="col-xs-6">
                                    <table class="table table-condensed">
                                        <thead>
                                            <tr>
                                                <th>Tax</th>
                                                <th class="text-right">Base</th>
                                                <th class="text-right">Amount</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr t-foreach="o.tax_line" t-as="t">
                                                <td><span t-field="t.name"/></td>
                                                <td class="text-right">
                                                    <span t-field="t.base" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}"/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="t.amount" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}"/>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div>
                                <span style="font-size:11px; font-weight:bold;"> Aus Bestandsgründen kann es bei Gratisartikeln zu Mengenabweichungen zwischen Ihrer Bestellung und
                                der Lieferung kommen. Bitte verwenden Sie für die Bezahlung der Rechnung immer den orangenen Einzahlungsschein</span>
                            </div>

                        </div>
                        <!-- <div class="footer" style="padding:0; margin:0; position: absolute; top: 200mm;"> -->
                            <t t-if="o.wsd_payment_tx_id.esr_reference_number"> <!-- wird dann zur esr nummer wenns mike einprogramiert -->
                                <t t-call="reports_ahch.report_layout_ahch_slip_footer_invoice"/>
                            </t>
                            <t t-if=" not o.wsd_payment_tx_id.esr_reference_number"> <!-- wird dann zur esr nummer wenns mike einprogrammiert -->
                                    <!-- <span t-esc="company.rml_footer"/> -->
                                <div class="row">
                                    <div class="col-md-12">
                                        <t t-call="reports_ahch.report_layout_ahch_basic_footer"/>
                                    </div>
                                </div>
                            </t>
                        <!-- </div> -->
                        <!-- <t t-call="I10n_ch_payment_slip.one_slip_per_page_from_invoice"/> -->
                        <!-- <t t-raw="o.bvr_reference"/> -->

                    </t>
                </t>
        </template>

        <!-- INHERIT and replace the original account.invoice qweb-report -->
        <template id="overwrite_invoice" inherit_id="account.report_invoice" name="Overwrite Invoice">
            <xpath expr="//t[@t-call='report.html_container']" position="replace">
                <t t-call="report.html_container">
                    <t t-foreach="doc_ids" t-as="doc_id">
                        <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'reports_ahch.invoice_ahch_document')"/>
                    </t>
                </t>
            </xpath>
        </template>

        <!-- Paper Format for account.invoice qweb-report -->
        <record id="account.account_invoices" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="reports_ahch.paperformat_ahch" />
            <field name="download_filename">Rechnung_${o.number}.pdf</field>
        </record>

    </data>
</openerp>
